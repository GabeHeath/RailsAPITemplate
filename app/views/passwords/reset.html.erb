<br/>
<div class="container">
    <div class="col-8 offset-2">
        <%= form_for(:forgot_password, url: password_reset_path) do |f| %>

            <%= f.hidden_field :token, value: @token %>

            <div class="form-group row">
                <%= f.password_field :password, class: 'form-control form-control-lg', placeholder: 'Enter new password' %>
            </div>

            <div class="form-group row">
                <%= f.password_field :password_confirmation, class: 'form-control form-control-lg', placeholder: 'Confirm password' %>
            </div>

            <div class="form-group row">
                <%= f.submit 'Update password', class: 'btn btn-lg btn-primary btn-block' %>
            </div>
        <% end %>
    </div>
</div>
